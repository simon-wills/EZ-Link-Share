{
    "name": "EZ Link Share",
    "version": "1.0.0",
    "description": "Easy Link Sharing Chrome Extension",
    "manifest_version": 3,
    "author": "Simon Wills",
    "action":{
        "default_popup": "index.html",
        "default_title": "EZ Link Share"
    },
    "permissions": [
        "tabs",
        "clipboardWrite"
    ],
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon64.png",
        "128": "icon128.png"
    }
}